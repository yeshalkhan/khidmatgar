<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

<!-- Background with Border Layer -->
<item>
    <shape android:shape="rectangle">
        <solid android:color="@android:color/white" /> <!-- White background -->
        <corners android:radius="20dp" />
        <stroke android:width="2dp" android:color="#CABBBBBB" /> <!-- Grey border -->
    </shape>
</item>

</layer-list>
