    <!-- Message Input Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:padding="10dp">

        <ImageButton
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shape_round_corners"
            android:backgroundTint="@color/light_grey"
            android:contentDescription="@string/down_button_description"
            android:src="@drawable/ic_down_arrow"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_search_field"
            android:backgroundTint="@color/light_grey"
            android:hint="@string/send_hint"
            android:inputType="text"
            android:paddingVertical="12dp"
            android:paddingHorizontal="20dp"
            android:layout_marginStart="6dp"
            android:layout_gravity="center_vertical"
            android:importantForAutofill="no"/>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:background="@drawable/shape_circle"
            android:backgroundTint="@color/peach"
            android:contentDescription="@string/send_button_description"
            android:src="@drawable/ic_send"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>
</LinearLayout>
